pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Set up Python environment') {
            steps {
                script {
                    // Intenta crear el entorno virtual
                    def result = sh(script: 'python3 -m venv venv', returnStatus: true)
                    
                    // Si falla, instala python3-venv y vuelve a intentar(fail)
                    if (result != 0) {
                        sh 'sudo apt-get update'
                        sh 'sudo apt-get install -y python3-venv'
                        sh 'python3 -m venv venv'
                    }
                    
                    // Activa el entorno virtual e instala las dependencias
                    sh '. venv/bin/activate && pip install flake8'
                }
            }
        }

        stage('Run Linter') {
            steps {
                sh '. venv/bin/activate && flake8 .'
            }
        }
    }

    post {
        always {
            sh 'rm -rf venv'
        }
    }
}