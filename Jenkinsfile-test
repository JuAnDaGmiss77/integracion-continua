pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Set up Python environment') {
            steps {
                sh 'python3 -m venv venv'
                sh '. venv/bin/activate'
                sh 'pip install flake8'
            }
        }

        stage('Run Linter') {
            steps {
                sh '. venv/bin/activate && flake8 .'
            }
        }
    }

    post {
        always {
            sh 'rm -rf venv'
        }
    }
}